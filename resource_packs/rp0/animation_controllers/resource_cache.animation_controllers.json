{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.resource_cashe.open": {
      "states": {
        "default": {
          "animations": ["idle"],
          "transitions": [
            {"open": "query.is_sheared"}
          ],
          "blend_transition": 0.2
        },
        "open": {
          "animations": ["open"],
          "particle_effects": [
            {
              "effect": "cache_stars",
              "locator": "stars_locator"
            }
          ]
        }
      }
    },
    "controller.animation.resource_cashe.objective": {
      "states": {
        "default": {
          "particle_effects": [
            { "effect": "objective" }
          ]
        }
      }
    }
  }
}